            "cyan": "#3A96DD",
            "foreground": "#13A10E", 
            "green": "#13A10E",
            "purple": "#881798",
            "red": "#C50F1F",
            "selectionBackground": "#FFFFFF",
            "white": "#CCCCCC",
            "yellow": "#C19C00"
        }
    ],
    "tabWidthMode": "equal",
    "themes": []
}
